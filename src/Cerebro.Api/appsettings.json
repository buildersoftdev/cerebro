{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          //"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}  andyx  ({SourceContext})  {Level,-12} {0,-3} | {0,-3} {Message}{NewLine}{Exception}"
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}  cerebro   {Level,-12} {0,-3} | {0,-3} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },

  "NodeId": "cerebro_standalone",
  "AllowedHosts": "*"
}
