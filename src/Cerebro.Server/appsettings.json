{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          //"formatter": {
          //  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
          //  "template": "{@t:yyyy-MM-dd HH:mm:ss}  cerebro  {@l:u}    |    {@m}\n{@x}"
          //  //"template": "{@t:yyyy-MM-dd HH:mm:ss}  cerebro  {@l:u}  ({Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)})   |    {@m}\n{@x}"
          //}
          //"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}  cerebro  {Level,-12} {0,-3} | {0,-3} {Message}{NewLine}{Exception}"
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}  cerebro  {Level,-12} {0,-3} | {0,-3} {Message} - ({SourceContext}) {NewLine}{Exception}"
        }
      }
    ]
  },

  "CEREBRO_NODE_ID": "cerebro_standalone",
  "AllowedHosts": "*"
}
